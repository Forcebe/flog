<!-- Container for formatting -->
<div class="container">
  <h2>Create a Flight</h2>
  <!-- Displays the correct form for the aviation type of the logbook -->
  <% if @logbook.aviation_type == 'General Aviation' %>
    <%= render partial: "general_aviation_form" %>
  <% elsif @logbook.aviation_type == 'Gliding' %>
    <%= render partial: "gliding_form" %>
  <% elsif @logbook.aviation_type == 'Free Flight' %>
    <%= render partial: "free_flight_form" %>
  <% elsif @logbook.aviation_type == 'Skydiving' %>
    <%= render partial: "skydiving_form" %>
  <% end %>
</div>
