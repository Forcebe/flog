<thead class="thead-light">
  <tr>
    <th rowspan="2" class="align-middle">Date</th>
    <th colspan="2" class="align-middle">Aircraft</th>
    <th rowspan="2" class="align-middle">Location</th>
    <th rowspan="2" class="align-middle">Launch Type</th>
    <th rowspan="2" class="align-middle">Notes</th>
    <th rowspan="2" class="align-middle">Dual Time</th>
    <th rowspan="2" class="align-middle">Solo Time</th>
    <th rowspan="2" class="align-middle">Settings</th>
  </tr>
  <tr>
    <th><small>Type</small></th>
    <th><small>Registration</small></th>
  </tr>
</thead>
<tbody>
  <%=
  render partial: "gliding_data",
  collection: @logbook.flights,
  :as => :flight
  %>
</tbody>
<thead class="thead-light">
  <th colspan="6" class="align-middle"> Totals</th>
  <th class="align-middle">
    <%= @flights.where(:command => false).sum(:flight_time).round(1) %>
  </th>
  <th class="align-middle">
    <%=  @flights.where(:command => true).sum(:flight_time).round(1) %>
  </th>
  <th class="align-middle">Hours</th>
</thead>
