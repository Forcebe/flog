<thead class="thead-light">
  <tr>
    <th>Date</th>
    <th>Equipment</th>
    <th>Location</th>
    <th>Launch Type</th>
    <th>Notes</th>
    <th>Duration</th>
    <th>Distance</th>
    <th>Settings</th>
  </tr>
</thead>
<tbody>
  <%=
  render partial: "free_flight_data",
  collection: @logbook.flights,
  :as => :flight
  %>
</tbody>
<thead class="thead-light">
  <th colspan="5" class="align-middle"> Totals</th>
  <th class="align-middle">
    <%= "#{@flights.sum(:flight_time).round(1)} hrs" %>
  </th>
  <th class="align-middle">
    <%=  "#{@flights.sum(:distance).round(1)} Km" %>
  </th>
  <th class="align-middle">Hours</th>
</thead>
