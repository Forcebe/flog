  <tr>
    <th rowspan="3" class="align-middle">Date</th>
    <th colspan="2" class="align-middle">Aircraft</th>
    <th rowspan="3" class="align-middle">Notes</th>
    <th colspan="4" class="align-middle">Single Engine</th>
    <th colspan="4" class="align-middle">Multi Engine</th>
    <th rowspan="3" class="align-middle">Instrument</th>
    <th rowspan="3" class="align-middle">Settings</th>
  </tr>
  <tr>
    <th rowspan="2" class="align-middle"><small>Type</small></th>
    <th rowspan="2" class="align-middle"><small>Registration</small></th>
    <th colspan="2" class="align-middle"><small>Dual</small></th>
    <th colspan="2" class="align-middle"><small>Command</small></th>
    <th colspan="2" class="align-middle"><small>Dual</small></th>
